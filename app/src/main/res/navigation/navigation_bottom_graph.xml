<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_bottom_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.store.ui.category.CategoryFragment"
        android:label="CategoryFragment" >
        <action
            android:id="@+id/action_categoryFragment_to_categoryProductFragment"
            app:destination="@id/categoryProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.store.ui.product.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment" />
        <action
            android:id="@+id/action_homeFragment_to_bestProductFragment"
            app:destination="@id/bestProductFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favouriteProductFragment"
            app:destination="@id/favouriteProductFragment" />
        <action
            android:id="@+id/action_homeFragment_to_newProductFragment"
            app:destination="@id/newProductFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.store.ui.product.cart.CartFragment"
        android:label="CartFragment" />
    <fragment
        android:id="@+id/categoryProductFragment"
        android:name="com.example.store.ui.category.category.CategoryProductFragment"
        android:label="CategoryProductFragment" >
        <action
            android:id="@+id/action_categoryProductFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailProductFragment"
        android:name="com.example.store.ui.product.detail.DetailProductFragment"
        android:label="DetailProductFragment" >
        <argument
            android:name="item"
            app:argType="com.example.store.data.model.product.ProductItem" />
        <action
            android:id="@+id/action_detailProductFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/bestProductFragment"
        android:name="com.example.store.ui.product.BestProductFragment"
        android:label="BestProductFragment" >
        <action
            android:id="@+id/action_bestProductFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteProductFragment"
        android:name="com.example.store.ui.product.FavouriteProductFragment"
        android:label="FavouriteProductFragment" >
        <action
            android:id="@+id/action_favouriteProductFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/newProductFragment"
        android:name="com.example.store.ui.product.NewProductFragment"
        android:label="NewProductFragment" >
        <action
            android:id="@+id/action_newProductFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.example.store.ui.product.home.search.SearchResultFragment"
        android:label="SearchResultFragment" >
        <action
            android:id="@+id/action_searchResultFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment" />
        <action
            android:id="@+id/action_searchResultFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:popUpTo="@id/searchResultFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_searchResultFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/searchFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.store.ui.customer.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_accountFragment"
            app:destination="@id/accountFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.store.ui.customer.AccountFragment"
        android:label="AccountFragment" >
        <action
            android:id="@+id/action_accountFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/accountFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.store.ui.customer.signin.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signInFragment_to_accountFragment"
            app:destination="@id/accountFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.store.ui.product.home.search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment" />
        <action
            android:id="@+id/action_searchFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment" />
        <action
            android:id="@+id/action_searchFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/searchFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>