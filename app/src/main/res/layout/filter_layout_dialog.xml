<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dismiss_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_clear_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/category_filter_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="@string/category"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lower_bound_price" />

        <TextView
            android:id="@+id/category_filter_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="@string/price"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dismiss_btn" />

        <TextView
            android:id="@+id/from_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="از"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/lower_bound_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lower_bound_price" />


        <TextView
            android:id="@+id/to_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="تومان     تا"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/lower_bound_price"
            app:layout_constraintEnd_toStartOf="@+id/lower_bound_price"
            app:layout_constraintTop_toTopOf="@+id/lower_bound_price" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lower_bound_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toStartOf="@+id/from_tv"
            app:layout_constraintTop_toBottomOf="@+id/category_filter_tv_price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lower_bound_price_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/higher_bound_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/lower_bound_price"
            app:layout_constraintEnd_toStartOf="@+id/to_tv"
            app:layout_constraintTop_toTopOf="@+id/lower_bound_price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/higher_bound_price_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/toman_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="تومان"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/higher_bound_price"
            app:layout_constraintEnd_toStartOf="@+id/higher_bound_price"
            app:layout_constraintTop_toTopOf="@+id/higher_bound_price" />

        <RadioGroup
            android:id="@+id/category_filter_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            app:layout_constraintTop_toBottomOf="@+id/category_filter_tv_category">


            <RadioButton
                android:id="@+id/women_cloth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="پوشاک زنانه"
                app:layout_constraintEnd_toStartOf="@+id/cloth"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/cloth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=" پوشاک مردانه"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/women_cloth"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/digital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="دیجیتال"
                app:layout_constraintStart_toStartOf="@+id/women_cloth"
                app:layout_constraintTop_toBottomOf="@+id/cloth" />

            <RadioButton
                android:id="@+id/watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="ساعت و مچ بند هوشمند"
                app:layout_constraintStart_toStartOf="@+id/cloth"
                app:layout_constraintTop_toBottomOf="@+id/cloth" />

            <RadioButton
                android:id="@+id/movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="فیلم"
                app:layout_constraintStart_toStartOf="@+id/digital"
                app:layout_constraintTop_toBottomOf="@+id/digital" />

            <RadioButton
                android:id="@+id/sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="فروش ویژه"
                app:layout_constraintStart_toStartOf="@+id/watch"
                app:layout_constraintTop_toBottomOf="@+id/digital" />

            <RadioButton
                android:id="@+id/art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="کتاب و هنر"
                app:layout_constraintStart_toStartOf="@+id/movie"
                app:layout_constraintTop_toBottomOf="@+id/sale" />

            <RadioButton
                android:id="@+id/book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="کتاب و مجلات"
                app:layout_constraintStart_toStartOf="@+id/sale"
                app:layout_constraintTop_toBottomOf="@+id/sale" />

            <RadioButton
                android:id="@+id/health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="بهداشت"
                app:layout_constraintStart_toStartOf="@+id/art"
                app:layout_constraintTop_toBottomOf="@+id/art" />

            <RadioButton
                android:id="@+id/supermarket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سوپر مارکت"
                app:layout_constraintStart_toStartOf="@+id/book"
                app:layout_constraintTop_toBottomOf="@+id/art"
                android:layout_marginTop="15dp" />



        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/submit_filter"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="760dp"
            app:layout_constraintTop_toBottomOf="@id/category_filter_rg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>